<h1>Brands</h1>
<a href="/brands/create" class="btn btn-primary mb-3">Add Brand</a>
<table class="table">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (brands && brands.length > 0) { %>
      <% brands.forEach(brand => { %>
        <tr>
          <td><img src="<%= brand.logo %>" alt="<%= brand.name %>" style="width: 50px; height: 50px;"></td>
          <td><%= brand.name %></td>
          <td><%= brand.description %></td>
          <td>
            <a href="/brands/edit/<%= brand._id %>" class="btn btn-warning btn-sm">Edit</a>
            <form action="/brands/delete/<%= brand._id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="4" class="text-center">No brands available</td>
      </tr>
    <% } %>
  </tbody>
</table>
